{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "connections": {
    "zenquotes": {
      "type": "http",
      "baseUrl": "https://zenquotes.io/"
    },
    "wikipedia": {
      "type": "http",
      "baseUrl": "https://api.wikimedia.org/core/v1/wikipedia/en/",
      "headers": {
        "Authorization": "Bearer {{WIKI_API_TOKEN}}"
      }
    },
    "tmdb": {
      "type": "http",
      "baseUrl": "https://api.themoviedb.org/3/",
      "headers": {
        "Authorization": "Bearer {{API_TOKEN}}"
      }
    },
    "stackauth": {
      "type": "http",
      "baseUrl": "https://api.stack-auth.com/api/v1/",
      "headers": {
        "X-Stack-Access-Type": "server",
        "X-Stack-Project-Id": "{{PROJECT_ID}}",
        "X-Stack-Secret-Server-Key": "{{SECRET_SERVER_KEY}}"
      }
    },
    "triviadb": {
      "type": "postgresql",
      "connString": "postgresql://{{USERNAME}}:{{PASSWORD}}@ep-super-math-a5wqcmd4.us-east-2.aws.neon.tech/neondb?sslmode=require"
    },
    "together": {
      "type": "http",
      "baseUrl": "https://api.together.xyz/",
      "headers": {
        "Authorization": "Bearer {{AI_API_TOKEN}}"
      }
    }
  },
  "models": {
    "text-generator": {
      "sourceModel": "meta-llama/Meta-Llama-3.1-8B-Instruct",
      "provider": "hugging-face",
      "connection": "hypermode"
    },
    "minilm": {
      "sourceModel": "sentence-transformers/all-MiniLM-L6-v2",
      "provider": "hugging-face",
      "connection": "hypermode"
    },
    "llama": {
      "sourceModel": "meta-llama/Meta-Llama-3.1-70B-Instruct-Turbo",
      "connection": "together",
      "path": "v1/chat/completions"
    }
  },
  "collections": {
    "movieOverviews": {
      "searchMethods": {
        "searchMethod1": {
          "embedder": "miniLMEmbed",
          "index": {
            "type": "sequential"
          }
        }
      }
    },
    "movieTitles": {
      "searchMethods": {}
    },
    "movieReleaseDates": {
      "searchMethods": {}
    },
    "movieIds": {
      "searchMethods": {}
    }
  }
}
